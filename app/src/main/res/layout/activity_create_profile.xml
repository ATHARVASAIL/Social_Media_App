<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CreateProfile">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Profile"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="75dp">

        <ImageView
            android:id="@+id/iv_cp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@drawable/baseline_person_24"
            android:scaleType="fitCenter"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/et_name_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:hint="Name"
        android:minHeight="48dp"
        android:paddingStart="5dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/baseline_person_24"
        android:textColor="@color/black"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/et_profession_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:hint="Profession"
        android:minHeight="48dp"
        android:paddingStart="5dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/baseline_work_24"
        android:textColor="@color/black"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/et_bio_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:hint="Bio"
        android:minHeight="48dp"
        android:paddingStart="5dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/baseline_person_pin_24"
        android:textColor="@color/black"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/et_email_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:hint="Email"
        android:minHeight="48dp"
        android:paddingStart="5dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/baseline_email_24"
        android:textColor="@color/black"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/et_Phone_No_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:hint="Phone Number"
        android:minHeight="48dp"
        android:paddingStart="5dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/baseline_phone_24"
        android:textColor="@color/black"
        android:paddingLeft="10dp"/>

    <Button
        android:id="@+id/btn_cp"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/black"
        android:text="Save Profile"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:id="@+id/progressbar_cp"/>


</LinearLayout>